<?xml version="1.0" encoding="UTF-8"?>
<faces-config
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<!-- Enable Spring -->
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<!-- location -->
		<locale-config>
			<default-locale>en_US</default-locale>
		</locale-config>

		<!-- resources bundle -->
		<resource-bundle>
			<base-name>i18n.i18n</base-name>
			<display-name>i18n</display-name>
			<var>i18n</var>
		</resource-bundle>
		<message-bundle>i18n.messages</message-bundle>
	</application>


	<!-- configuration of navigation rules -->
	<navigation-rule>
		<!-- navigation-rule for login.xhtml -->
		<from-view-id>/faces/login.xhtml</from-view-id>
		<!-- navigation-case for method login() -->
		<navigation-case>
			<from-action>#{loginManagedBean.login}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/home.xhtml</to-view-id>
		</navigation-case>
		<!-- navigation-case for method login() -->
		<navigation-case>
			<from-action>#{loginManagedBean.login}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/faces/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/faces/home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/faces/error.xhtml</to-view-id>
		</navigation-case>
		<!-- navigation case for method logout() -->
		<navigation-case>
			<from-action>#{loginManagedBean.logout}</from-action>
			<from-outcome>loggedout</from-outcome>
			<to-view-id>/faces/login.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>

</faces-config>
